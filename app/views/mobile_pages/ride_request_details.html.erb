<style type="text/css">body{font-size: 24px;}</style>
<section class="page-title center">
    <h1>Your Ride Request</h1>
</section>
<section>
  <div class="row">
      <div class="col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
          <form class="form inputs-underline">
            <div class='row'>
             <%= render 'mobile_pages/partials/details/status_details_section' %>
              <!--end user-details-->
            </div>
            <div class="row">
              <%= render 'mobile_pages/partials/details/ride_details_section' %>
            </div>
            <hr>

              <!--end row-->

                  <!--end form-group-->

              <section class="center">
                <h3>This Is The Ride You've Requested:</h3>
                  <div class="form-group">
                      <!-- <button type="submit" class="btn btn-primary btn-rounded">Save Changes</button> -->

                          <iframe
                            width="100%"
                            height="500"
                            frameborder="0" style="border:0"
                            src="https://www.google.com/maps/embed/v1/directions?key=AIzaSyCqbNCLQod-jTl4UltA_2s-FEiG-L0Q_gA
                            &origin=<%= URI.encode(@ride_request.pickup_address) %>
                            &destination=<%= URI.encode(@ride_request.dropoff_address)%>
                            &avoid=tolls|highways" allowfullscreen>
                          </iframe>
                  </div>
                  <!--end form-group-->
              </section>
          </form>
          <!--end form-->
          <hr>
      </div>
      <!--end col-md-6-->

  </div>
    <!--end row-->
</section>



<% link_to 'Edit', edit_ride_request_path(@ride_request) %> |
<% link_to 'Back', ride_requests_path %>


