

<section class="page-title">
    <h1>Ride Requests</h1>
</section>
<div class='container'>
<div class='row'>
  <%= render 'ride_requests/manager_form' %>
</div>
</div>
<br>
<br>
<div class='container'>
    <div class='row'>
        <div class='col-md-9'>
        <% @ride_requests.each do |request| %>
          <div class="item item-row" >
                <h2><%= request.requester_name %> -  <%= request.riders %></h2>
                <div class="description">
                    <h4><strong>Pickup:</strong> <%= request.pickup_address%> <br> <br>  <strong>DropOff:</strong><%= request.dropoff_address%></h4>
                    Status: <div class="label label-default"><%= request.status %></div>
                </div>
            <div class="controls-more">
              <% if request.status == "In Queue" %>
                <ul>
                    <% Shuttle.all.each do |shuttle| %>
                    <li><%= link_to "Assign to #{shuttle.name}", ride_request_assign_shuttle_path(request, shuttle.id) %></li>
                    <% end %>
                </ul>
              <% else %>
                 <ul>
                   <li><%= link_to "Mark Clear", ride_request_mark_clear_path(request) %></li>
                 </ul>
              <% end %>
            </div>
            <!--end controls-more-->
          </div>
        <% end %>
    </div>
    <div class='col-md-3'>
      <%= render 'shuttles/shuttle_locations'%>
    </div>
    </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
        $('.ride-select').select2();
      });
</script>
