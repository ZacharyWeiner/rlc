<%= form_with(model: @ride_request, local: true) do |form| %>
  <% if @ride_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ride_request.errors.count, "error") %> prohibited this ride_request from being saved:</h2>

      <ul>
      <% @ride_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% locations = [] %>
  <% locations << ["-- Please Select --", "-- Please Select --"]%>
  <%  @ordered_locations.each do |l|  %>
  <% locations << [l.name, "#{l.name}, #{l.address}"] %>
  <% end %>


    <div class='row'>
      <%= form.label :name %>
      <%= form.text_field :requester_name, id: :ride_request_requester_name, class: 'form-control', placeholder: "Rider Name" %>
    </div>
    <div class='row'>
      <%= form.label :phone %>
      <%= form.text_field :phone, id: :ride_request_phone,  class: 'form-control', placeholder:'Phone Number...'  %>

    </div>
    <div class="row">
      <%= form.label :origin %><br>
      <div class='origin'>
        <div class="row">
          <div class='col-md-9'>
            <%= form.select(:pickup_address, options_for_select(locations), {}, { :class => 'ride-select'}) %>
          </div>
          <div class='col-md-3'>
            <button type='button' onclick="showCustomPickupAddress()">custom</button>
          </div>
        </div>
      </div>
      <div class='hidden-origin' style='visibility: hidden'>
        <%= form.text_field :pickup_address_custom, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <%= form.label :destination %><br>
      <div class='destination'>
        <div class="row">
          <div class='col-md-9'>
            <%= form.select(:dropoff_address, options_for_select(locations), {}, { :class => 'ride-select'}) %>
          </div>
          <div class='col-md-3'>
            <button type='button' onclick="showCustomDropoffAddress()">custom</button>
          </div>
        </div>
      </div>
      <div class='hidden-destination' style='visibility: hidden'>
        <%= form.text_field :destination_address_custom, class: 'form-control' %>
      </div>
    </div>
    <div class='row'>
        <div class='col-md-3'>
          <%= form.label :riders %>

          <%= form.number_field :riders, id: :ride_request_riders, class: 'form-control', style: 'max-width:50px' %>
        </div>
        <div class='col-md-9'>
           <%= form.label :shuttle %><br>
          <%= form.select(:shuttle_id, Shuttle.all.map{|s| [s.name, s.id]}, {}, { :class => 'ride-select'}) %>
        </div>
    </div>
    <div class='row'>
      <br>
      <%= form.hidden_field :redirect, :value => "manager" %>
      <%= form.submit "Request Ride", class: "btn btn-primary pull-right" %>
    </div>
<% end %>
<script type="text/javascript">
  function showCustomPickupAddress(){
    $(".hidden-origin").css('visibility', 'visible');
    $(".origin").css('visibility', 'hidden');
  };
  function showCustomDropoffAddress(){

      $(".hidden-destination").css('visibility', 'visible');
      $(".destination").css('visibility', 'hidden');

  };
</script>
