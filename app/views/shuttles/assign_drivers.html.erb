<div class='container'>
  <% Shuttle.all.each do |shuttle| %>
    <div class='row'>
      <%= form_for shuttle do |f|%>
        <div class='col-md-1'>
          <%= shuttle.id %>
        </div>
        <div class='col-md-8'>
          <%= f.text_field :name, id: :shuttle_name, class: 'form-control' %>
        </div>
        <div class='col-md-3'>
          <%= f.submit "Update", class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
