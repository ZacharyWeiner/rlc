

<% shuttle_count = 1 %>
<% shuttle_placement = ""%>
<% Shuttle.all.each do |shuttle| %>
    <% shuttle_placement = shuttle_placement + "['#{shuttle.name}', #{shuttle.current_lat}, #{shuttle.current_long}, #{shuttle_count}], " %>
    <% shuttle_count = shuttle_count + 1 %>
  <% end %>
  <% shuttle_placement = shuttle_placement[0...-2] %>
  Shuttle placement: <%= shuttle_placement %>
  <br>
  <br>

 <div id="map" style="height: 400px; width: 500px;">
  <script type="text/javascript">

    var locations = [
        ['Shuttle 1 ', 40.473821, -106.826383, 1], ['Shuttle 2 ', 40.488728, -106.839089, 2], ['Shuttle 3 ', 40.453008, -106.805285, 3]
    ];

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      center: new google.maps.LatLng(40.473821, -106.826383),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) {
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][1], locations[i][2]),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>
