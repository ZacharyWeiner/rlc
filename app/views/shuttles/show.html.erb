<style>
    .google-maps {
        position: relative;
        padding-bottom: 75%; // This is the aspect ratio
        height: 0;
        overflow: hidden;
    }
    .google-maps iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100% !important;
        height: 100% !important;
    }

    .directions-card .directions-card-medium-large {
      display: none;
    }
</style>
<p id="notice"><%= notice %></p>
<h1>Shuttle Route</h1>
<div class='container'>
  <div class='row'>
    <div class='col-md-6'>
      <p>
        <strong>Name:</strong>
        <%= @shuttle.name %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @shuttle.address %>
      </p>


      <%= waypoints = ""%>
      <% unless @ride_requests.first.nil?%>
        <% @ride_requests.each do |rr|%>
          <% waypoints = waypoints + rr.pickup_address.gsub!(' ','+') + "|" %>
          <% waypoints = waypoints + rr.dropoff_address.gsub!(' ','+') + "|" %>
        <% end %>
      <% end %>
      <div style='max-width: 1000px'>
        <% waypoints = waypoints[0...-1] %>
      </div>
      <% request_count = 0%>
      <% unless @ride_requests.first.nil?%>
        <% @ride_requests.each do |rr|%>
          <% request_count = request_count + 1 %>
          <h4> Ride Request #<%= request_count %></h4>
          <div class='row'>
            <div class='col-md-6'>
              Pickup:<br> <%= rr.pickup_address.gsub!('+',' ') %>
            </div>
            <div class='col-md-6'>
               Dropoff:<br> <%= rr.dropoff_address.gsub!('+',' ') %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class='col-md-6'>
      <div class="google-maps">
        <iframe
          width="100%"
          frameborder="0" style="border:0"
          src="https://www.google.com/maps/embed/v1/directions?key=AIzaSyCqbNCLQod-jTl4UltA_2s-FEiG-L0Q_gA
          &origin=<%= @ride_requests.first.pickup_address%>
          &destination=<%= @ride_requests.last.dropoff_address%>
          &waypoints=<%= waypoints %>
          &avoid=tolls|highways" allowfullscreen>
        </iframe>
      </div>
    </div>
  </div>
</div>

