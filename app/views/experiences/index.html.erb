                    <section>
                      <% @experiences.each do |ex| %>
                        <% if ex.businesses.count == 0 %>
                        <div class="item item-row" data-id="15" >
                        <% else %>
                        <div class="item item-row" data-id="15" data-latitude="<%= ex.businesses.first.location.latitude%>" data-longitude="<%= ex.businesses.first.location.latitude%>">
                          <% end %>
                            <figure class="ribbon">Top</figure>
                            <%= link_to ex do %>
                                <div class="image bg-transfer" style="background-image: url(<%= ex.header_image.url %>);">
                                    <figure><%= ex.experience_occurances.first.date.strftime(" %a %d-%b-%Y") %> <%= ex.start_time.strftime(" %H:%M %p") unless ex.start_time.nil? %></figure>
                                    <%= image_tag ex.header_image, class: 'img-fluid' %>
                                </div>
                                <!--end image-->
                                <div class="map"></div>
                                <div class="description">
                                    <h3><%= ex.title %> </h3>
                                    <h4><%= ex.description%></h4>
                                    <% unless ex.categories.count == 0 %>
                                      <div class="label label-default">
                                        <% ex.categories.each do |cat| %>
                                          <%= cat.name %>
                                        <% end %>
                                      </div>
                                    <% end %>
                                </div>
                                <!--end description-->
