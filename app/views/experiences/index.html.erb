                                <ul>
                                    <li><%= link_to 'Show', ex %></li>
                                    <li><%= link_to 'Edit', edit_experience_path(ex) %></li>
                                    <li><%= link_to 'Delete', experiences_path(ex), method: :delete, data: { confirm: 'Are you sure?' } %></li>
