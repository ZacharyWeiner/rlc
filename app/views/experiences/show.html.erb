
<p id="notice"><%= notice %></p>
<div class='row'>
  <div class='col-md-6'>
    <p>
      <strong>Title:</strong>
      <%= @experience.title %>
    </p>

    <p>
      <strong>Cost:</strong>
      $<%= @experience.cost %> per person
    </p>

    <p>
      <strong>Duration:</strong>
      <%= @experience.duration %>
    </p>

    <p>
      <strong>Capacity:</strong>
      <%= @experience.capacity %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @experience.description %>
    </p>

    <%= link_to 'Edit', edit_experience_path(@experience) %> |
    <%= link_to 'Back', experiences_path %>
  </div>
  <div class='col-md-6'>
    <%= render 'experiences/partials/assign_company'%>
  </div>
</div>

<div class='row'>
  <% @experience.businesses.each do |b| %>
    <%= b.name %>
  <% end %>
</div>

