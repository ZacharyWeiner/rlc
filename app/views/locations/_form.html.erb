<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='row' style='padding-bottom:24px;' >
    <div class="col-md-4">
       <%= form.label :name %>
        <%= form.text_field :name, id: :location_name, class: 'form-control', placeholder: 'Name of Place' %>
    </div>
    <div class='col-md-4'>
      <%= form.label :address %>
      <%= form.text_field :address, id: :location_address, class: 'form-control', placeholder: 'Address' %>
    </div>
    <div class='col-md-2'>
      <%= form.label :priority %>
      <%= form.number_field :priority, id: :location_priority, class: 'form-control' %>
    </div>
     <div class="col-md-2">
      <%= form.submit "Add", class: 'btn btn-primary v-center', style: 'margin-top:24px;' %>
    </div>
  </div>

<% end %>
