<div class='container'>
  <style>
    td{}
  </style>
<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Priority</th>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td>
          <% if location.priority.nil? %>
            0
          <% else %>
            <%= location.priority %>
          <% end %>
        </td>
        <td><%= location.name %></td>
        <td><%= location.address %></td>
        <td><%= link_to  location do %> <i class='fa fa-eye' style='margin:6px;'></i><%end%></td>
        <td><%= link_to edit_location_path(location) do %> <i class='fa fa-edit' style='margin:6px;'></i><%end%></td>
        <td><%= link_to location, method: :delete, data: { confirm: 'Are you sure?' } do %> <i class='fa fa-trash' style='margin:6px;'></i><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
</div>
